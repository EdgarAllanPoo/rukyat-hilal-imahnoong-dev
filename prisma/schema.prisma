generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  year_of_birth Int
  phone_number  String
  agency_name   String
  isAdmin       Boolean  @default(false)
  Rukyat        Rukyat[]
}

model Rukyat {
  id          Int    @id @default(autoincrement())
  link_photo  String
  description String
  taken_date  String
  userId      Int
  User        User   @relation(fields: [userId], references: [id])
}
